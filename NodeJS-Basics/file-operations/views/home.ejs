<%- include('./header.ejs') %>

<section class="body-font bg-gray-900">
    <div class="container px-5 py-24 mx-auto">
        <form class="container px-5 py-24 mx-auto" action="/upload" method="post" enctype="multipart/form-data">
            <div class="flex flex-wrap w-full mb-20 flex-col items-center text-center">
              <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-100">Upload resource and name</h1>
            </div>
            <div class="lg:w-1/2 md:w-2/3 mx-auto">
                <div class="flex flex-wrap -m-2">
                   
                    <div class="p-2 w-full">
                        <div class="relative">
                            <label
                                for="message"
                                class="leading-7 text-sm text-gray-400"
                                >Image Name </label
                            >
                            <input
                                name="name"
                                type="text"
                                placeholder="Ex. Abu trip"
                                class="w-full bg-gray-800 bg-opacity-40 rounded border border-gray-700 focus:border-indigo-500 focus:bg-gray-900 focus:ring-2 focus:ring-indigo-900 h-10 text-base outline-none text-gray-100 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"
                            ></input>
                        </div>
                        <br>
                        <div class="relative">
                            <label
                                for="message"
                                class="leading-7 text-sm text-gray-400"
                                >Upload File</label
                            >
                           <input
                            class="block w-full text-sm text-gray-100 cursor-pointer dark:text-gray-100 focus:outline-none dark:placeholder-gray-100"
                            id="file_input"
                            name="file"
                            type="file"
                        />
                        </div>
                    </div>
                    <div class="p-2 w-full">
                        <button
                            class="flex mx-auto text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg"
                            type="submit"
                        >
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<%- include('./footer.ejs') %>
